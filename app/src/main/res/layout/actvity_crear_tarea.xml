<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCrearTarea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloActividad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear tarea"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor para los fragments (dentro de un LinearLayout según requisito) -->
    <LinearLayout
        android:id="@+id/contenedorFragments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTituloActividad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <!-- Usamos FragmentContainerView para hacer replace de fragments -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerCrear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.tarealarga1trimestre.Fragmento1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
